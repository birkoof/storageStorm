<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout android:id="@+id/contentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">


        <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                tools:text="Document ID"
                android:textColor="@android:color/black"
                android:textSize="20sp"/>

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_edit"
            android:textAppearance="?android:textAppearanceLarge"
            android:tint="@color/icons_remove_delete" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/ivEdit"
            android:src="@drawable/icon_delete"
            android:textAppearance="?android:textAppearanceLarge"
            android:tint="@color/icons_remove_delete" />

    </RelativeLayout>

    <View android:id="@+id/shadeDivider"
          android:layout_width="match_parent"
          android:layout_height="4dp"
          android:layout_below="@+id/contentView"
          style="@style/ShadeDivider"/>

</RelativeLayout>