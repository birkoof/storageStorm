<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basic.storagestorm">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_storage_storm_square"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_storage_storm_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".dialogs.AddCollectionToCollectionDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.GetCollectionDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.DeleteCollectionDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.CreateCollectionDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity android:name=".activities.CreateObject" />
        <activity
            android:name=".dialogs.EditObjectDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.DeleteObjectDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.RemoveObjectFromCollectionDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.AddObjectToCollectionDialog"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity
            android:name=".dialogs.BaseDialogActivity"
            android:theme="@style/AppTheme.CustomPopup" />
        <activity android:name=".activities.EditObject" />
        <activity android:name=".activities.AboutDataObject" />
        <activity android:name=".activities.SearchResultActivity" />
        <activity android:name=".activities.AboutCollection" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>